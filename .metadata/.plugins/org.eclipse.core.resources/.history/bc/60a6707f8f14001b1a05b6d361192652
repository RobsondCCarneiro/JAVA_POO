package entidades;

public class DadosBancarios {
	private int idConta;
	private String name;
	private double Balance=0;
	
	
	//get e set para acessar as variaveis encapsuladas (privadas) por fora
	public int getIdConta() {
		return idConta;
	}
	public void setIdConta(int idConta) {
		this.idConta = idConta;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public double getBalance() {
		return Balance;
	}
	public void setBalance(double balance) {
		Balance = balance;
	}
	
	//Agora os metodos
	public void depositado(double valor) {
		Balance += valor;
	}
	public void sacado(double valor) {
		Balance -= (valor + 5);
	}
	
	//Esse metodo eh para imprimir la na tela de forma que nao precise repetir no main
	public String toString() {
		return "Account " +  idConta + ", Holder: " + name + ", Ballance: $ " + String.format("%.2f", Balance);
	}
	
}
